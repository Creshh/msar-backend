{
	"$id": "https://tu-chemnitz.de/tomkr.meta.location",
	"$schema": "http://json-schema.org/draft-07/schema#",
	"title": "Location",
	"description": "Location data in address and/or coordinate format",
	"type": "object",
	"extends": {
		"$ref": "metaData.json"
	},
	"properties": {
		"latitude": {
			"type": "integer"
		},
		"longitude": {
			"type": "integer"
		},
		"country": {
			"desc": true,
			"type": "string"
		},
		"city": {
			"desc": true,
			"type": "string"
		},
		"street": {
			"desc": true,
			"type": "string"
		},
		"number": {
			"type": "string"
		}
	}
}