{
	"$id": "https://tu-chemnitz.de/tomkr.meta.exif",
	"$schema": "http://json-schema.org/draft-07/schema#",
	"title": "EXIF",
	"description": "EXIF image metadata",
	"type": "object",
	"properties": {
		"id": {
			"description": "Automatically generated id",
			"type": "string"
		},
		"reference": {
			"description": "Absolute path to the referred asset (image, video, etc.)",
			"type": "string"
		},
		"type": {
			"description": "Type of the included metadata values",
			"type": "string"
		},
		"source": {
			"description": "Source of the metadata values; e.g. framework name and version",
			"type": "string"
		},
		"raw": {
			"description": "Free text field for storing raw and additional data",
			"type": "string"
		},
		"xdim": {
			"type": "integer",
			"required": true
		},
		"ydim": {
			"type": "integer",
			"required": true
		},
		"datetime": {
			"type": "string",
			"required": true
		},
		"model": {
			"type": "string"
		},
		"lens": {
			"type": "string"
		},
		"orientation": {
			"type": "string"
		},
		"datetimeoriginal": {
			"type": "string"
		},
		"compression": {
			"type": "string"
		},
		"fnumber": {
			"type": "string"
		},
		"exposuretime": {
			"type": "string"
		},
		"isospeed": {
			"type": "string"
		},
		"meteringmode": {
			"type": "string",
			"required": true
		},
		"focallength": {
			"type": "string",
			"required": true
		},
		"flash": {
			"type": "string"
		}
	},
	"required": [
		"reference",
		"type",
		"source",
		"xdim",
		"ydim",
		"orientation",
		"datetime"
	]
}